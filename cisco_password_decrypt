#!/ms/dist/perl5/bin/perl5.8

use strict;
use warnings;

my $encrypted = $ARGV[0];
chomp $encrypted;
my $decrypted;
if (!(length($encrypted) & 1)) {
        my @xlat = ( 0x64, 0x73, 0x66, 0x64, 0x3b, 0x6b, 0x66, 0x6f, 0x41, 0x2c, 0x2e, 0x69, 0x79,
                           0x65, 0x77, 0x72, 0x6b, 0x6c, 0x64, 0x4a, 0x4b, 0x44, 0x48, 0x53 , 0x55, 0x42 );
        my ($s, $e) = ($encrypted =~ /^(..)(.+)/o);
        for (my $i = 0; $i < length($e); $i+=2) {
                $decrypted .= sprintf "%c",hex(substr($e,$i,2))^$xlat[$s++];
        }
        print "Decrypted password is: $decrypted\n";
}
